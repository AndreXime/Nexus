{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "useUnknownInCatchVariables":false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "*": ["/node_modules/@types"] // Inclui o diret√≥rio de tipos
    }
  },
  "include": ["src/*", "src/**/*.ts", "src/@types/*.d.ts", "swaggerSetup.cjs"],
  "exclude": ["node_modules"]
}
