{
  "compilerOptions": {
    "target": "ES6", // Define a versão do JavaScript de saída (ex: "es5", "es6", etc.)
    "module": "NodeNext", // Define o tipo de módulo (ex: "commonjs", "es6", "amd")
    "moduleResolution": "nodenext",
    "strict": true, // Ativa todas as verificações de tipo estritas
    "outDir": "./dist", // Define o diretório de saída para os arquivos compilados
    "rootDir": "./src" // Define o diretório raiz dos arquivos TypeScript
  },
  "include": [
    "src/*", // Inclui todos os arquivos dentro do diretório "src"
    "src/models/User.ts"
  ],
  "exclude": [
    "node_modules" // Exclui o diretório "node_modules"
  ]
}
