{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "*": ["/node_modules/@types", "/types/*"] // Inclui o diret√≥rio de tipos
    }
  },
  "include": ["src/*", "src/**/*.ts", "@types/*.d.ts"],
  "exclude": ["node_modules"]
}
